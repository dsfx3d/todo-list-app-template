include ./radio

mixin create-bar()
  #create-bar-wrapper.card.flex.wrap
    input(placeholder=attributes.placeholder)#create-bar.base-input
    button.icon +
  #create-bar-actions.row
    .col-xs-12.col-lg-5.flex.center-xs.start-md
      ul.around-xs
        li: +radio('All')(name="filter", value="All")
        li: +radio('Active')(name="filter", value="Active")
        li: +radio('Completed')(name="filter", value='Completed')
